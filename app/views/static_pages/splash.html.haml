.splash#splashBody
  %header.mobileLanding
    %figure
      = image_tag "cflogo.png"
  %article.copy
  %article.roleButtons
    %p <strong>MATCH:</strong> A new way for students to meet mentors
    %section.button-wrap.wht
      = link_to "Find a Mentor", new_user_registration_path(user_type: "mentee"), class: "btn_txt haveAccount findMentor trans_wht_btn button", id: "findMentor"
      .triangleUp.triWht
    %section.button-wrap
      = link_to "Become a Mentor", new_user_registration_path(user_type: "mentor"), class: "btn_txt haveAccount findMentor trans_wht_btn button"
      .triangleUp.triBlk
  %article.haveAccount
    .triangleUp.darkRed
    %section.existingUser
      = link_to "Have an account?", new_user_session_path, class: "btn_txt button haveAccount"
  %p.whoFor Who is Match for?
  %section.hero
    .overlay
    %figure
      = image_tag "tony_portrait-sq.jpg", class: "heroImg"
    .ulWrapper
      %ul#studentHeroCopy
        %h1 Our Students
        %h2 are just like you
        %h3 and they're learning from the pros
  %section.hero
    .overlay
    .ulWrapper.mentors
      %ul.mentors#mentorHeroCopy
        %h1 Our Mentors
        %h2 are working practicioners
        %h3 at the top of their fields
    %figure
      = image_tag "overshoulder-sq.jpg", class: "heroImg"
  %p.learnMore Learn a little more...
  %section.about
    = link_to "About Match", intro_path, class: "wht_red_btn button"
